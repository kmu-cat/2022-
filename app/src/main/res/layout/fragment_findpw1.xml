<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/findPw1_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회원가입시 등록한 정보로\n비밀번호를 변경할 수 있습니다."
        android:textAlignment="center"
        tools:ignore="MissingConstraints"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/findPw1_nameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:text="이름"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/findPw1_info"
        tools:ignore="MissingConstraints" />

    <EditText
        android:inputType="text"
        android:id="@+id/findPw1_nameEditText"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/edittext_style"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:hint="실명을 입력하세요."
        app:layout_constraintTop_toBottomOf="@+id/findPw1_nameTextView"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp" />
    <TextView
        android:id="@+id/findPw1_emailTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:text="이메일"
        app:layout_constraintTop_toBottomOf="@+id/findPw1_nameEditText"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />
    <LinearLayout
        android:id="@+id/findPw1_emailLinearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/findPw1_emailTextView"
        tools:ignore="MissingConstraints">
        <EditText
            android:inputType="text"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:background="@drawable/edittext_leftnarrow_style"
            android:hint="이메일을 입력하세요"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints" />
        <android.widget.Button
            style="?android:attr/borderlessButtonStyle"
            android:id="@+id/findPw1_confirmButton"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginLeft="-0.8dp"
            android:layout_marginTop="-1.7dp"
            android:background="@drawable/button_rightnarrow_style"
            android:text="인증 받기"
            android:textColor="@color/cheese"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints" />
    </LinearLayout>
    <TextView
        android:id="@+id/findPw1_emailWarning"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:textColor="#FF0000"
        android:text="이메일이 일치하지 않습니다."
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/findPw1_emailLinearLayout"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/findPw1_certificationTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:text="인증번호"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/findPw1_emailWarning"
        tools:ignore="MissingConstraints" />

    <EditText
        android:inputType="number"
        android:id="@+id/findPw1_certificationEditText"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/edittext_style"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:hint="인증번호를 입력하세요."
        app:layout_constraintTop_toBottomOf="@+id/findPw1_certificationTextView"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp" />
    <TextView
        android:visibility="invisible"
        android:id="@+id/findPw1_certificationWarning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:textColor="#FF0000"
        android:text="인증번호가 일치하지 않습니다."
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/findPw1_certificationEditText"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>