<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@drawable/edge"
    android:layout_marginBottom="20dp" >



    <ImageView
        android:id="@+id/community_picture"
        android:layout_width="300dp"
        android:layout_height="330dp"
        android:src="@drawable/community_test"
        android:layout_margin="30dp" />

    <TextView
        android:id="@+id/community_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="한줄문구 입력시 뜨는 문장"
        android:textSize="15dp"
        android:layout_marginBottom="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp">

            <TextView
                android:id="@+id/community_buccat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="# 버캣리스트"
                android:textSize="15dp"
                />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                />

            <TextView
                android:id="@+id/community_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="by 작성자닉네임"
                android:textSize="15dp" />

        </LinearLayout>

</LinearLayout>